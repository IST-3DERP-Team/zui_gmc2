            <VBox fitContainer="true" class="sidePadding">
                <uiT:Table id="gmcTab"
                    rows="{gmc>/results}"
                    visibleRowCountMode="Auto"
                    showColumnVisibilityMenu="true"
                    enableColumnFreeze="true"
                    enableCellFilter="true"
                    selectionMode="MultiToggle"
                    firstVisibleRowChanged="onFirstVisibleRowChanged"
                    cellClick="onCellClickGMC"
                    rowSelectionChange="onRowSelectionChange"
                    sort="onSort"
                    filter="onFilter"
                    columnFreeze="onColumnUpdated"
                    columnMove="onColumnUpdated"
                    columnResize="onColumnUpdated"
                    columnSelect="onColumnUpdated"
                    columnVisibility="onColumnUpdated">
                    <uiT:rowSettingsTemplate>
                        <uiT:RowSettings highlight="{= ${gmc>Edited} === true ? 'Warning' : null}" />
                    </uiT:rowSettingsTemplate>
                    <uiT:extension>
                        <Toolbar>
                            <Label text="SBU: " />
                            <ComboBox id="cboxSBU"
                                width="100px"
                                change="onSBUChange"
                                selectedKey="{ui>/sbu}"
                                items="{
                                    path: '/SBURscSet'
                                }"
                                class="marginTopNone">
                                <core:Item key="{SBU}" text="{SBU}" />
                            </ComboBox>
                            <Text text="{counts>/gmc} GMC" class="selHdrKeyFontStyle" />
                            <ToolbarSpacer/>
                            <SearchField
                                id="searchFieldGMC"
                                placeholder="Filter"
                                value=""
                                search="filterGlobally"
                                visible="false"
                                width="15rem"/>
                            <ToolbarSeparator/>
                            <Button id="btnAddGMC" 
                                icon="sap-icon://add"
                                press="onCreateGMC" 
                                tooltip="{ddtext>/ADD}"
                                visible="true"/>
                            <Button id="btnEditGMC" 
                                icon="sap-icon://edit"
                                press="onEditGMC"
                                tooltip="{ddtext>/EDIT}"
                                visible="true"/>
                            <Button id="btnSaveGMC" 
                                icon="sap-icon://save"
                                press=".onSaveChanges('gmc')" 
                                tooltip="{ddtext>/SAVE}"
                                visible="false" />
                            <Button id="btnCancelGMC" 
                                icon="sap-icon://sys-cancel"
                                press="onCancelGMC" 
                                tooltip="{ddtext>/CANCEL}"
                                visible="false" />                                        
                            <Button id="btnDeleteGMC" 
                                icon="sap-icon://delete"
                                press="onDeleteGMC"
                                tooltip="{ddtext>/DELETE}"
                                visible="true"/>
                            <Button id="btnRefreshGMC" 
                                icon="sap-icon://refresh"
                                press="onRefreshGMC"
                                tooltip="{ddtext>/REFRESH}"
                                visible="true"/> 
                            <Button id="btnSortGMC" 
                                icon="sap-icon://sort"
                                press="onColSort"
                                tooltip="{ddtext>/SORT}"
                                visible="true" />
                            <Button id="btnFilterGMC" 
                                icon="sap-icon://filter"
                                press="onColFilter"
                                tooltip="{ddtext>/FILTER}"
                                visible="true" />
                            <Button id="btnFullScreenHdr" 
                                icon="sap-icon://full-screen"
                                press="onTableResize('Hdr','Max')"
                                tooltip="{ddtext>/FULLSCREEN}"
                                visible="true" />
                            <Button id="btnExitFullScreenHdr" 
                                icon="sap-icon://exit-full-screen"
                                press="onTableResize('Hdr','Min')"
                                tooltip="{ddtext>/EXITFULLSCREEN}"
                                visible="false" />
                            <Button id="btnColPropGMC" 
                                icon="sap-icon://table-column"
                                press="onColumnProp"
                                tooltip="{ddtext>/COLUMNS}"
                                visible="true" />
                            <Button id="btnTabLayoutGMC" 
                                icon="sap-icon://grid" 
                                press="onSaveTableLayout"
                                tooltip="{ddtext>/SAVELAYOUT}"
                                visible="true" />                                 
                        </Toolbar>
