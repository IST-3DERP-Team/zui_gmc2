                                sort="onSort"
                                filter="onFilter"
                                columnFreeze="onColumnUpdated"
                                columnMove="onColumnUpdated"
                                columnResize="onColumnUpdated"
                                columnSelect="onColumnUpdated"
                                columnVisibility="onColumnUpdated">
                                <uiT:extension>
                                    <Toolbar>
                                        <Text text="GMC: {ui>/activeGmc} ( {counts>/materials} Materials )" class="selHdrKeyFontStyle" />
                                        <ToolbarSpacer/>
                                        <SearchField
                                            id="searchFieldMatl"
                                            placeholder="Filter"
                                            value=""
